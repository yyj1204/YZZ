<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:gravity="center"
    tools:context="com.example.cm.juyiz.ui.activity.BindDialogActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="500px"
        android:layout_height="550px"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/tv_black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入您要绑定的会员ID或手机号"
            android:textSize="30px"
            android:gravity="center"
            android:layout_marginTop="30px"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/et_bind"
            android:layout_width="360px"
            android:layout_height="70px"
            android:background="@color/white"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_marginTop="40px"
            android:maxLength="11"
            android:paddingLeft="20px"
            android:textColor="@color/tv_black"
            android:inputType="phone"
            android:hint="请输入会员ID或手机号"
            android:textSize="26px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="35px"
            android:textSize="25px"
            android:layout_weight="1"
            android:text="@string/string_bindhint_content"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_bind_sure"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:textSize="30px"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/white"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
