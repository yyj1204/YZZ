<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.HomeFragment">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rela_home_message"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/home_message" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="YUANZiZi   "
            android:textColor="@color/white"
            android:textSize="32px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rela_home_search"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/home_search" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.example.cm.juyiz.customwidget.PagerSlidingTabStrip
        android:id="@+id/psts_home"
        android:layout_width="match_parent"
        android:layout_height="80px"
        app:pstsTabTextSize="32px"
        android:background="#ffffff">
    </com.example.cm.juyiz.customwidget.PagerSlidingTabStrip>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bgSystem" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.MainActivity">
    </android.support.v4.view.ViewPager>

</com.zhy.autolayout.AutoLinearLayout>
