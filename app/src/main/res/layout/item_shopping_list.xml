<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_height="170px">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_shopping_list_all"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_margin="24px"
            android:src="@drawable/selector_checked"/>

        <ImageView
            android:id="@+id/iv_shopping_list"
            android:layout_width="104px"
            android:layout_height="104px"
            android:scaleType="fitXY"
            android:src="@drawable/loading_classify"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20px">

            <TextView
                android:id="@+id/tv_shopping_list_name"
                android:layout_width="408px"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:singleLine="true"
                android:textColor="@color/tv_black" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="55px"
                android:orientation="horizontal"
                android:layout_marginTop="20px">
                <TextView
                    android:id="@+id/tv_shopping_list_price"
                    android:layout_width="120px"
                    android:layout_height="match_parent"
                    android:textSize="34px"
                    android:textColor="@color/red"
                    android:gravity="center_vertical"
                    android:text=""/>
                <ImageView
                    android:id="@+id/iv_shopping_list_sub"
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_marginLeft="76px"
                    android:src="@drawable/shopping_sub"/>
                <TextView
                    android:id="@+id/tv_shopping_list_num"
                    android:layout_width="94px"
                    android:layout_height="match_parent"
                    android:textSize="24px"
                    android:textColor="@color/tv_black"
                    android:gravity="center"
                    android:background="@drawable/shape_shopping_numbg"
                    android:text=""/>
                <ImageView
                    android:id="@+id/iv_shopping_list_add"
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:src="@drawable/shopping_add"/>
                <ImageView
                    android:id="@+id/iv_shopping_list_delete"
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/shopping_delete"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/tv_shopping_list_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24px"
        android:layout_marginTop="5px"
        android:textSize="20px"
        android:textColor="@color/red"/>
</com.zhy.autolayout.AutoLinearLayout>