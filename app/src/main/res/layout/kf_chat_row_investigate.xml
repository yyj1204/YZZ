<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    >

    <TextView
        android:visibility="gone"
        android:id="@+id/chatting_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/lightgrey"
        android:textSize="10sp"
        android:layout_margin="2dp"
        />

    <RelativeLayout
        android:background="@drawable/kf_coner_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/chatting_time_tv" >

        <TextView
            android:id="@+id/tv"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:text="请您对本次服务做出评价, 点击对应选项即可完成评价"/>
        <View
            android:id="@+id/vi"
            android:layout_below="@id/tv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:id="@+id/chat_investigate_ll"
            android:layout_below="@id/vi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>