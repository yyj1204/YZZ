<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_pay_wx"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="22px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pay_type_icon"
            android:layout_width="60px"
            android:layout_height="60px"
            android:src="@drawable/loading_classify" />

        <TextView
            android:id="@+id/pay_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:text="微信支付"
            android:textColor="@color/tv_black"
            android:textSize="35px" />

        <ImageView
            android:id="@+id/iv_pay_wx"
            android:layout_width="44px"
            android:layout_height="44px"
            android:src="@drawable/selector_pay" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@drawable/shape_pay_line"
        android:layerType="software"
        android:orientation="horizontal" />
</LinearLayout>