<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.cm.juyiz.ui.activity.PayResultActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:padding="20px"
        android:background="@color/black">
        <ImageView
            android:id="@+id/iv_payresult_back"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/tv_payresult_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="支付成功"
            android:textSize="32px"
            android:textColor="@color/white"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="250px">

        <ImageView
            android:id="@+id/iv_payresult"
            android:layout_width="156px"
            android:layout_height="156px"
            android:layout_marginLeft="50px"
            android:src="@drawable/pay_success"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:orientation="vertical"
            android:layout_marginLeft="30px">
            <TextView
                android:id="@+id/tv_payresult_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付成功"
                android:textSize="40px"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/tv_payresult_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="30px"
                android:gravity="bottom"
                android:text="订单即将发货"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <View style="@style/divider_horizontal" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linear_payresult_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="50px"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_payresult_ordernumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单编号："/>
            <TextView
                android:id="@+id/tv_payresult_tradingtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="交易时间："/>
            <TextView
                android:id="@+id/tv_payresult_payway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="支付方式："/>
            <TextView
                android:id="@+id/tv_payresult_paymoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="支付金额："/>
        </com.zhy.autolayout.AutoLinearLayout>

        <View style="@style/divider_horizontal" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="100px">

        <TextView
            android:id="@+id/tv_payresult_checkorder"
            android:layout_width="180px"
            android:layout_height="70px"
            android:textSize="30px"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/shopping_pay_bg"
            android:text="查看订单"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_payresult_home"
            android:layout_width="180px"
            android:layout_height="70px"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/shopping_pay_bg"
            android:text="返回首页"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
