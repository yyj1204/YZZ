<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:gravity="center_vertical"
        android:padding="32px">

        <ImageView
            android:id="@+id/iv_newrelease_list"
            android:layout_width="220px"
            android:layout_height="176px"
            android:scaleType="fitXY"
            android:src="@drawable/loading_product"/>
        
        <TextView
            android:id="@+id/tv_newrelease_title"
            android:layout_width="424px"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@+id/iv_newrelease_list"
            android:layout_marginLeft="24px"
            android:textSize="32px"
            android:textColor="@color/tv_black"
            android:text="[3个装]蛤老大调试安防机率大幅度"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="424px"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_newrelease_list"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="@color/tv_black"
                android:text="¥"/>
            <TextView
                android:id="@+id/tv_newrelease_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:layout_weight="1"
                android:layout_marginLeft="10px"
                android:textColor="@color/red"
                android:text="158"/>
            <TextView
                android:id="@+id/tv_newrelease_purchase"
                android:layout_width="166px"
                android:layout_height="62px"
                android:textSize="28px"
                android:gravity="center"
                android:background="@color/red"
                android:textColor="@color/white"
                android:text="立即抢购"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>