<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8px"
        android:orientation="vertical"
        android:background="@color/white">

            <ImageView
                android:id="@+id/iv_vip_list"
                android:layout_width="336px"
                android:layout_height="336px"
                android:scaleType="fitXY"
                android:src="@drawable/loading_product"/>
        <View
            style="@style/divider_horizontal" />
        <TextView
            android:id="@+id/tv_vip_list_title"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textColor="@color/tv_black"
            android:layout_margin="10px"
            android:textSize="25px"
            android:text=""/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:text="Â¥"/>
            <TextView
                android:id="@+id/tv_vip_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30px"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/tv_vip_list_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5px"
                android:textSize="20px"
                android:textColor="@color/white"
                android:background="@color/red"/>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>